<resources>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#116062</item>
        <item name="colorPrimaryDark">#1C4749</item>
        <item name="colorAccent">#116062</item>
