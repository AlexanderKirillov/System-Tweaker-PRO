<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/kerneltweakshello"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal|center"
            android:gravity="center_vertical|center_horizontal|center"
            android:paddingBottom="10dp"
            android:text="@string/nowe"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff0000"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_weight="0.16">

            <TextView
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|top"
                android:text="@string/max_freq"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/sp_max_freq"
                android:layout_width="202dp"
                android:layout_height="match_parent"
                android:layout_gravity="right|top"
                android:layout_weight="1"
                android:prompt="@string/max_freq" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_weight="0.94">

            <TextView
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|top"
                android:text="@string/min_freq"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/sp_min_freq"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_weight="0.5"
                android:prompt="@string/min_freq" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_weight="0.94">

            <TextView
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|top"
                android:text="@string/governor"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/sp_governor"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_weight="0.5"
                android:prompt="@string/governor" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_weight="0.94">

            <TextView
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|top"
                android:text="@string/ioscheduler"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/sp_ioscheduler"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_weight="0.5"
                android:prompt="@string/ioscheduler" />
        </FrameLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="@string/apply"
                android:textSize="@dimen/buttonTextSize" />


        </LinearLayout>

        <CheckBox
            android:id="@+id/ckb_apply_on_boot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="-8dp"
            android:checked="false"
            android:gravity="center_vertical|center|center_horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/tcponboot"
            app:buttonTint="@color/textview1good" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.13">

            <TextView
                android:id="@+id/textView40"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|top"
                android:gravity="center_vertical|center|center_horizontal"
                android:text="@string/tweakssystem"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <com.onebit.spinner2.Spinner2
                android:id="@+id/spinner3"
                android:layout_width="157dp"
                android:layout_height="match_parent"
                android:layout_gravity="right|top" />

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|top"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="@string/aboutsystem"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <CheckBox
            android:id="@+id/mpcs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:checked="false"
            android:text="@string/kernel1"
            app:buttonTint="@color/textview1good" />

        <CheckBox
            android:id="@+id/cpuoptimize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/kernel2"
            app:buttonTint="@color/textview1good" />

        <CheckBox
            android:id="@+id/ohtweak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/oh"
            app:buttonTint="@color/textview1good" />

        <CheckBox
            android:id="@+id/sdcardtweak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/io3"
            app:buttonTint="@color/textview1good" />

        <CheckBox
            android:id="@+id/iotweaks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/io1"
            app:buttonTint="@color/textview1good" />

        <CheckBox
            android:id="@+id/kernelsleeper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/kernel3"
            app:buttonTint="@color/textview1good" />

        <CheckBox
            android:id="@+id/normsleeper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:checked="false"
            android:text="@string/kernel5"
            app:buttonTint="@color/textview1good" />

        <CheckBox
            android:id="@+id/ksm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:checked="false"
            android:text="@string/kernel6"
            app:buttonTint="@color/textview1good" />

        <CheckBox
            android:id="@+id/fastcharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:checked="false"
            android:text="@string/kernel7"
            app:buttonTint="@color/textview1good" />

        <CheckBox
            android:id="@+id/zram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:checked="false"
            android:text="@string/kernel8"
            app:buttonTint="@color/textview1good" />


    </LinearLayout>
</ScrollView>