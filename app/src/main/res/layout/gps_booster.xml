            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/unitedk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/roundbuttoncal"
            android:foregroundGravity="center_vertical|center_horizontal|center"
            android:gravity="right|center_vertical|center_horizontal"
            android:padding="20dp"
            android:text="@string/gpsvelikobr"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/iran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/roundbuttoncal"
            android:foregroundGravity="center_vertical|center_horizontal|center"
            android:gravity="right|center_vertical|center_horizontal"
            android:padding="20dp"
            android:text="@string/gpsiran"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/india"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/roundbuttoncal"
            android:foregroundGravity="center_vertical|center_horizontal|center"
            android:gravity="right|center_vertical|center_horizontal"
            android:padding="20dp"
            android:text="@string/gpsindia"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/indonesia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
