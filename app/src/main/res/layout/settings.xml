<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/backgroundColor"
        android:orientation="vertical"
        android:weightSum="1">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/theme" />

        <Button
            android:id="@+id/light_theme_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/roundbuttoncal"
            android:foregroundGravity="center_vertical|center_horizontal|center"
            android:gravity="right|center_vertical|center_horizontal"
            android:padding="20dp"
            android:text="@string/themelight"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/dark_theme_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/roundbuttoncal"
            android:foregroundGravity="center_vertical|center_horizontal|center"
            android:gravity="right|center_vertical|center_horizontal"
            android:padding="20dp"
            android:text="@string/themedark"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/amoled_theme_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/roundbuttoncal"
            android:foregroundGravity="center_vertical|center_horizontal|center"
            android:gravity="right|center_vertical|center_horizontal"
            android:padding="20dp"
            android:text="AMOLED"
            android:textColor="@android:color/white" />

        <CheckBox
            android:id="@+id/alerttweaks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:text="@string/unlocktweaks" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/languageset" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">


                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"

                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <TextView
                        android:id="@+id/status"
                        android:layout_width="139dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="50dp"
                        android:gravity="center_vertical|center|center_horizontal"
                        android:text="@string/rulanguage"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="163dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="36dp"
                        android:layout_marginTop="50dp"
                        android:gravity="center_vertical|center|center_horizontal"
                        android:text="@string/enlanguage"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/localeEN"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="left|center_vertical|center_horizontal|center"
                        android:layout_marginLeft="93dp"
                        android:layout_marginStart="93dp"
                        android:background="@drawable/flag_english"
                        android:elevation="0dp"
                        android:gravity="center"
                        android:paddingBottom="6dp" />


                    <Button
                        android:id="@+id/localeRU"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="right"
                        android:layout_marginEnd="86dp"
                        android:layout_marginRight="86dp"
                        android:background="@drawable/flag_russia"
                        android:gravity="center"
                        android:paddingBottom="6dp" />
                </RelativeLayout>

            </LinearLayout>

        </TableLayout>


    </LinearLayout>


</ScrollView>